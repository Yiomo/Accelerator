<Page
    x:Class="Accelerator.Pages.Audio_VOA_Index_Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Pivot x:Name="BannerPivot">
            <PivotItem>
                <PivotItem.Header>
                        <TextBlock Text="慢速" FontSize="20" VerticalAlignment="Center"/>
                </PivotItem.Header >
                <Frame x:Name="VOA_L_Frame" Margin="-12,0,-12,0"/>
            </PivotItem >
            <PivotItem>
                <PivotItem.Header>
                    <TextBlock Text="常速" FontSize="20"/>
                </PivotItem.Header >
                <Frame x:Name="VOA_N_Frame"  Margin="-12,0,-12,0"/>
            </PivotItem >
        </Pivot >
    </Grid>
</Page>
